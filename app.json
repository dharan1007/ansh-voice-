{
  "expo": {
    "name": "Voice Emotion",
    "slug": "voice-emotion",
    "scheme": "voiceemotion",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B0D12"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We use your microphone to capture voice input for transcription."
      }
    },
    "android": {
      "permissions": ["RECORD_AUDIO"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B0D12"
      },
      "package": "com.example.voiceemotion"
    },
    "extra": {
      "EXPO_PUBLIC_OPENAI_API_KEY": ""
    }
  }
}
